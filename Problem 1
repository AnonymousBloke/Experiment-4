cout << "	First Integer: "; cin >> a;
cout << "	Second Integer: "; cin >> b;
cout << endl;
c = modulo (a, b);
cout << "The Modulo Is: " << c;
cout << endl;
break;

default:
cout << "Invalid!" << endl;
}
break;

case 'n':
