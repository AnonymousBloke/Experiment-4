cout << "Enter Desired Operation (1 - 5): "; cin >> opera;
cout << endl;

switch (opera)
{
case 1:	

cout << "Enter Two Integers" << endl;
cout << "	First Integer: "; cin >> a;
cout << "	Second Integer: "; cin >> b;
cout << endl;
c = addition (a, b);
cout << "The Sum Is: " << c;
cout << endl;
break;
case 2:

cout << "Enter Two Integers" << endl;
cout << "	First Integer: "; cin >> a;
cout << "	Second Integer: "; cin >> b;
cout << endl;
c = subtraction (a, b);
cout << "The Difference Is: " << c;
cout << endl;
break;

case 3:

cout << "Enter Two Integers" << endl;
cout << "	First Integer: "; cin >> a;
cout << "	Second Integer: "; cin >> b;
cout << endl;
c = multiplication (a, b);
cout << "The Product Is: " << c;
cout << endl;
break;

case 4:

cout << "Enter Two Integers" << endl;
cout << "	First Integer: "; cin >> a;
